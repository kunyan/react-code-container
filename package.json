{
  "name": "react-code-container",
  "version": "3.0.1",
  "description": "a simple React code highlight component",
  "author": "Kun Yan <kyan@redhat.com>",
  "license": "MIT",
  "repository": "git@github.com:kunyan/react-code-container.git",
  "main": "./dist/index.cjs",
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/styles/base.css": "./dist/styles/base.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint:fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "stylelint": "stylelint '**/*.css' --fix",
    "preview": "vite preview",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=18.x",
    "react-dom": ">=18.x"
  },
  "dependencies": {
    "@tanstack/react-virtual": "3.0.1",
    "clsx": "2.0.0",
    "highlight.js": "11.9.0",
    "pretty-bytes": "6.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "@storybook/addon-essentials": "7.6.6",
    "@storybook/addon-interactions": "7.6.6",
    "@storybook/addon-links": "7.6.6",
    "@storybook/blocks": "7.6.6",
    "@storybook/react": "7.6.6",
    "@storybook/react-vite": "7.6.6",
    "@storybook/testing-library": "0.2.2",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "@vitejs/plugin-react-swc": "3.5.0",
    "commitizen": "4.3.0",
    "conventional-changelog-cli": "4.1.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.2",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "eslint-plugin-storybook": "0.6.15",
    "gh-pages": "6.1.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.6.6",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "typescript": "5.3.3",
    "vite": "4.5.1",
    "vite-plugin-dts": "3.7.0"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier -w"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
